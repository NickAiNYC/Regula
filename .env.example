# Regula Health - Environment Configuration Template
# Copy this file to .env and update with your values

# Application
ENVIRONMENT=development
SECRET_KEY=change-this-to-a-secure-random-key-in-production
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://regula:regula_dev_password_2025@localhost:5432/regula_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=86400

# JWT Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# File Upload
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=./uploads

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@regula.health

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=

# Security
HIPAA_ENCRYPTION_KEY=generate-a-secure-32-byte-key
