# Production Environment Variables Template
# Copy this to .env.prod and fill in actual values
# NEVER commit .env.prod to version control

# Database Configuration
POSTGRES_DB=regula_prod
POSTGRES_USER=regula_prod
POSTGRES_PASSWORD=<STRONG_PASSWORD_HERE>

# Redis Configuration
REDIS_PASSWORD=<STRONG_REDIS_PASSWORD>

# Application Secrets
SECRET_KEY=<GENERATE_WITH: openssl rand -hex 32>
ENCRYPTION_KEY=<GENERATE_WITH: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())">

# Domain Configuration
DOMAIN=regula.health

# Celery Flower Authentication
FLOWER_USER=admin
FLOWER_PASSWORD=<STRONG_FLOWER_PASSWORD>

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=<STRONG_GRAFANA_PASSWORD>

# AWS Configuration (for deployments)
AWS_ACCESS_KEY_ID=<YOUR_AWS_KEY>
AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET>
AWS_REGION=us-east-1

# Slack Notifications
SLACK_WEBHOOK=<YOUR_SLACK_WEBHOOK_URL>

# Email Configuration (for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=<SENDGRID_API_KEY>
FROM_EMAIL=noreply@regula.health

# Feature Flags
ENABLE_MFA=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true

# Performance Tuning
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
REDIS_MAX_CONNECTIONS=50
CELERY_WORKER_CONCURRENCY=4

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=regula-backups
